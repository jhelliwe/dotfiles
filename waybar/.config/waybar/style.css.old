* {
    font-family: Font Awesome, Roboto, Arial, sans-serif;
    font-size: 18px;
    color: #ffffff;
    border-radius: 8px;
    border-width: 3px;
    border-color: #454545;
    background-color: rgba(0,43,51,0.25);
}

window {
	font-weight: bold;
}

window#waybar {
    background: rgba(0, 0, 0, 0);
}

/*-----module groups----*/

.modules-right {
    margin: 3px 3px 0 0;
    border-radius: 8px;
    border-width: 3px;
    border-color: #454545;
}
.modules-center {
    margin: 3px 0 0 0;
    border-radius: 8px;
    border-width: 3px;
    border-color: #454545;
}
.modules-left {
    border-radius: 8px;
    border-width: 3px;
    border-color: #454545;
    margin: 1px 1 0 1px;
}
/*-----modules indv----*/
#workspaces button {
    padding: 0px 6px;
}
#workspaces button:hover {
    box-shadow: none;
    background: transparent;
    color: blue;
}

#workspaces button.focused {
    background-color: rgba(10,43,51,0.25);
}

#clock,
#battery,
#cpu,
#memory,
#temperature,
#network,
#pulseaudio,
#custom-media,
#tray,
#mode,
#custom-power,
#custom-menu,
#idle_inhibitor {
    padding: 0 5px;
}
#mode {
    color: #cc3436;
    font-weight: bold;
}
#custom-power {
    background-color: rgba(0,119,179,0.6);
    border-radius: 100px;
    margin: 5px 5px;
    padding: 1px 1px 1px 6px;
}
/*-----Indicators----*/
#idle_inhibitor.activated {
    color: #2dcc36;
}
#pulseaudio.muted {
    color: #cc3436;
}
#battery.charging {
    color: #2dcc36;
}
#battery.warning:not(.charging) {
	color: #e6e600;
}
#battery.critical:not(.charging) {
    color: #cc3436;
}
#temperature.critical {
    color: #cc3436;
}
#tray menu *:hover {
    background: rgba(0,0,0,0.9);
}
#tray menu * {
    color: #ffffff;
    background: rgba(0,0,0,1);
}
